{
  "name": "Django Template Harness",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers-contrib/features/hatch:2": {}
  },
  "containerEnv": {
    "DJANGO_SECRET_KEY": "dev-key",
    "DJANGO_SETTINGS_MODULE": "dj_template_harness.settings"
  },
  "onCreateCommand": "python -m venv .venv && python -m pip install --upgrade pip",
  "postCreateCommand": "sudo .venv/bin/pip install . && sudo .venv/bin/pre-commit install ",
  "postStartCommand": ".venv/bin/django-admin migrate",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "python.defaultInterpreterPath": ".venv/bin/python",
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "terminal.integrated.environmentChangesIndicator": "on",
        "python.terminal.activateEnvInCurrentTerminal": true,
        "files.insertFinalNewline": true,
        "files.associations": {
          "**.html*": "jinja-html"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "samuelcolvin.jinjahtml",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
